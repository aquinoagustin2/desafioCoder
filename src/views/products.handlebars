  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Lista de Productos</title>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  </head>
  <body>
    <h1>Lista de Productos</h1>
<div class="container-products">
  <a href="/api/sessions/logout"><button class="btn btn-danger">logout</button></a>
  <a href="/api/cart/{{user.cart}}"><button class="btn btn-warning">carts</button></a>
    <div class="card-group" style="width: 100rem;">
    {{#each products}}

    <div class="card" style="margin:35px">
  <img src="{{thumbnail}}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{description}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">US${{price}}</li>
    <li class="list-group-item">Cantidad: {{stock}}</li>
  </ul>
  <div class="card-body">
        <form action="/api/carts/{{user.cart}}/products/{{this._id}}" method="post">
          <input type="hidden" name="quantity" value="1">
          <input type="submit" value="Agregar al Carrito" class="btn btn-primary">
      </form>
  </div>
</div>


</form>

    
    {{/each}} 
    </div>
</div>

    {{#if products.hasPrevPage}}
      <a href="{{products.prevLink}}">Página anterior</a>
    {{/if}}

    {{#if products.hasNextPage}}
      <a href="{{products.nextLink}}">Página siguiente</a>
    {{/if}}

    <script src="https://cdn.socket.io/4.0.1/socket.io.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
  </html>